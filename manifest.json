{
    "name": "save mhtml",
    "description": "save mhtml",
    "version": "2.0",
    "permissions": [
        "activeTab",
        "browsingData",
        "contextMenus",
        "downloads",
        "pageCapture",
        "storage" ,
        "tabs",
        "tabs", 
        "<all_urls>",
        "webNavigation",
        "webRequestBlocking"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_title": "save mhtml"
    },
    "icons": {
        "128": "img/icon128.png",
        "16": "img/icon16.png",
        "48": "img/icon48.png"
    },
    "manifest_version": 2,
    "commands": {
        "save-mhtml-file": {
            "description": "save mhtml download",
            "suggested_key": {
                "default": "Alt+H",
                "mac": "Alt+H"
            }
        }
    }
}
